<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.AnnualOpeningActivity">

    <com.example.administrator.myapplication.common.view.TopView
        android:id="@+id/tv_annual_opening_top"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        android:gravity="bottom"
        app:is_back="true"
        app:title="@string/annual_opening"
        app:title_color="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y15"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="@dimen/x45">

            <EditText
                android:id="@+id/et_annual_opening"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y300"
                android:background="#fff5f5f5"
                android:gravity="start"
                android:hint="@string/input_annual_opening"
                android:padding="@dimen/x25"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/bt_annual_opening_confirm"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/y135"
        android:layout_marginStart="@dimen/x45"
        android:layout_marginEnd="@dimen/x45"
        android:layout_marginBottom="@dimen/x45"
        android:background="@drawable/ic_login_bt"
        android:text="@string/confirm"
        android:textColor="@color/white" />
</LinearLayout>