<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.SettingsActivity">

    <com.example.ipd.yueyue.common.view.TopView
        android:id="@+id/tv_setting_top"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        android:gravity="bottom"
        app:is_back="true"
        app:title="@string/setting"
        app:title_color="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_about_us"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y120"
            android:layout_marginTop="@dimen/y10"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="@dimen/x54"
            android:paddingEnd="@dimen/x54">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/about_us"
                android:textColor="@color/tx_check_box" />

            <ImageView
                android:layout_width="@dimen/x45"
                android:layout_height="@dimen/y40"
                app:srcCompat="@drawable/ic_selector" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/bg_line" />

        <LinearLayout
            android:id="@+id/ll_feed_back"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y120"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="@dimen/x54"
            android:paddingEnd="@dimen/x54">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/feed_back"
                android:textColor="@color/tx_check_box" />

            <ImageView
                android:layout_width="@dimen/x45"
                android:layout_height="@dimen/y40"
                app:srcCompat="@drawable/ic_selector" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/bt_setting_out"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/y135"
        android:layout_marginStart="@dimen/x45"
        android:layout_marginEnd="@dimen/x45"
        android:layout_marginBottom="@dimen/x45"
        android:background="@drawable/ic_login_bt"
        android:text="@string/out"
        android:textColor="@color/white" />
</LinearLayout>