<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.MyInformationFragment">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/srl_my_information"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_my_information"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/whitesmoke" />
    </android.support.v4.widget.SwipeRefreshLayout>

    <Button
        android:id="@+id/bt_upload_data"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/y135"
        android:layout_marginStart="@dimen/x45"
        android:layout_marginEnd="@dimen/x45"
        android:layout_marginBottom="@dimen/y40"
        android:background="@drawable/ic_login_bt"
        android:text="@string/upload_data"
        android:textColor="@color/white" />
</LinearLayout>