<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/whitesmoke"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_collateral"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/y10"
            android:paddingStart="@dimen/x45"
            android:paddingTop="@dimen/y10"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/y10"
            android:paddingEnd="@dimen/x45"
            android:paddingTop="@dimen/y10"
            android:text="@string/delete"
            android:textColor="@color/tx_select_fragment"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/y80"
        android:layout_marginTop="@dimen/y80"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="@dimen/x200"
                android:layout_height="@dimen/y200">

                <ImageView
                    android:id="@+id/iv_collateral_one"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_id"
                    android:scaleType="fitXY" />

                <ImageView
                    android:id="@+id/iv_collateral_one_del"
                    android:layout_width="@dimen/x45"
                    android:layout_height="@dimen/y45"
                    android:layout_above="@+id/iv_collateral_one"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_del_img" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y20"
                android:text="小区大门"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="@dimen/x200"
                android:layout_height="@dimen/y200">

                <ImageView
                    android:id="@+id/iv_collateral_two"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_id"
                    android:scaleType="fitXY" />

                <ImageView
                    android:id="@+id/iv_collateral_two_del"
                    android:layout_width="@dimen/x45"
                    android:layout_height="@dimen/y45"
                    android:layout_above="@+id/iv_collateral_two"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_del_img" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y20"
                android:text="入户门"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/y80"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="@dimen/x200"
                android:layout_height="@dimen/y200">

                <ImageView
                    android:id="@+id/iv_collateral_three"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_id"
                    android:scaleType="fitXY" />

                <ImageView
                    android:id="@+id/iv_collateral_three_del"
                    android:layout_width="@dimen/x45"
                    android:layout_height="@dimen/y45"
                    android:layout_above="@+id/iv_collateral_three"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_del_img" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y20"
                android:text="客厅"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="@dimen/x200"
                android:layout_height="@dimen/y200">

                <ImageView
                    android:id="@+id/iv_collateral_four"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_id"
                    android:scaleType="fitXY" />

                <ImageView
                    android:id="@+id/iv_collateral_four_del"
                    android:layout_width="@dimen/x45"
                    android:layout_height="@dimen/y45"
                    android:layout_above="@+id/iv_collateral_four"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_del_img" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y20"
                android:text="厨房"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/y80"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="@dimen/x200"
                android:layout_height="@dimen/y200">

                <ImageView
                    android:id="@+id/iv_collateral_five"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_id"
                    android:scaleType="fitXY" />

                <ImageView
                    android:id="@+id/iv_collateral_five_del"
                    android:layout_width="@dimen/x45"
                    android:layout_height="@dimen/y45"
                    android:layout_above="@+id/iv_collateral_five"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_del_img" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y20"
                android:text="卫生间"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="@dimen/x200"
                android:layout_height="@dimen/y200">

                <ImageView
                    android:id="@+id/iv_collateral_six"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_id"
                    android:scaleType="fitXY" />

                <ImageView
                    android:id="@+id/iv_collateral_six_del"
                    android:layout_width="@dimen/x45"
                    android:layout_height="@dimen/y45"
                    android:layout_above="@+id/iv_collateral_six"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_del_img" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y20"
                android:text="主卧"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/y80"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="@dimen/x200"
                android:layout_height="@dimen/y200">

                <ImageView
                    android:id="@+id/iv_collateral_seven"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_id"
                    android:scaleType="fitXY" />

                <ImageView
                    android:id="@+id/iv_collateral_seven_del"
                    android:layout_width="@dimen/x45"
                    android:layout_height="@dimen/y45"
                    android:layout_above="@+id/iv_collateral_seven"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_del_img" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y20"
                android:text="次卧"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="@dimen/x200"
                android:layout_height="@dimen/y200">

                <ImageView
                    android:id="@+id/iv_collateral_eight"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_id"
                    android:scaleType="fitXY" />

                <ImageView
                    android:id="@+id/iv_collateral_eight_del"
                    android:layout_width="@dimen/x45"
                    android:layout_height="@dimen/y45"
                    android:layout_above="@+id/iv_collateral_eight"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_del_img" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y20"
                android:text="书房"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>