<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.BriefOutlineActivity">

    <com.example.ipd.yueyue.common.view.TopView
        android:id="@+id/tv_brief_outline_top"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:gravity="bottom"
        app:is_back="true"
        app:title="@string/brief_outline"
        app:title_color="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_brief_outline_usage_of_loan"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y120"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingEnd="@dimen/x54"
            android:paddingStart="@dimen/x54">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/usage_of_loan"
                android:textColor="@color/tx_check_box" />

            <TextView
                android:id="@+id/tv_usage_of_loan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:ellipsize="end"
                android:gravity="end"
                android:maxEms="2"
                android:singleLine="true"
                android:text="@string/input"
                android:textColor="@color/tx_not_select_fragment" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/bg_line" />

        <LinearLayout
            android:id="@+id/ll_brief_outline_payment"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y120"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingEnd="@dimen/x54"
            android:paddingStart="@dimen/x54">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/payment"
                android:textColor="@color/tx_check_box" />

            <TextView
                android:id="@+id/tv_payment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:ellipsize="end"
                android:gravity="end"
                android:maxEms="6"
                android:singleLine="true"
                android:text="@string/input"
                android:textColor="@color/tx_not_select_fragment" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/bg_line" />

        <LinearLayout
            android:id="@+id/ll_brief_outline_monthly_average_flow"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y120"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingEnd="@dimen/x54"
            android:paddingStart="@dimen/x54">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/monthly_average_flow"
                android:textColor="@color/tx_check_box" />

            <TextView
                android:id="@+id/tv_monthly_average_flow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:ellipsize="end"
                android:gravity="end"
                android:maxEms="6"
                android:singleLine="true"
                android:text="@string/input"
                android:textColor="@color/tx_not_select_fragment" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/bg_line" />

        <LinearLayout
            android:id="@+id/ll_brief_outline_annual_opening"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y120"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingEnd="@dimen/x54"
            android:paddingStart="@dimen/x54">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/annual_opening"
                android:textColor="@color/tx_check_box" />

            <TextView
                android:id="@+id/tv_annual_opening"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:ellipsize="end"
                android:gravity="end"
                android:maxEms="6"
                android:singleLine="true"
                android:text="@string/input"
                android:textColor="@color/tx_not_select_fragment" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/bt_brief_outline_confirm"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/y135"
        android:layout_marginBottom="@dimen/x45"
        android:layout_marginEnd="@dimen/x45"
        android:layout_marginStart="@dimen/x45"
        android:background="@drawable/ic_login_bt"
        android:text="@string/confirm"
        android:textColor="@color/white" />
</LinearLayout>