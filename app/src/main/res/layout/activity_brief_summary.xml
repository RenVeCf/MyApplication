<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitesmoke"
    android:orientation="vertical"
    tools:context="com.example.ipd.yueyue.activity.BriefSummaryActivity">

    <com.example.ipd.yueyue.common.view.TopView
        android:id="@+id/tv_brief_summary_top"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        android:gravity="bottom"
        app:is_back="true"
        app:title="简述概要"
        app:title_color="@color/black" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/x50"
        android:text="借款用途" />

    <TextView
        android:id="@+id/tv_use_loan"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y150"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingEnd="@dimen/x50"
        android:paddingStart="@dimen/x50"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/x50"
        android:text="还款来源" />

    <TextView
        android:id="@+id/tv_asd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y150"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingEnd="@dimen/x50"
        android:paddingStart="@dimen/x50"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/x50"
        android:text="月均流水" />

    <TextView
        android:id="@+id/tv_monthly_average_water"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y150"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingEnd="@dimen/x50"
        android:paddingStart="@dimen/x50"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/x50"
        android:text="年开票额" />

    <TextView
        android:id="@+id/tv_annual_billing_amount"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y150"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingEnd="@dimen/x50"
        android:paddingStart="@dimen/x50"
        android:textColor="@color/black"
        android:textSize="16sp" />
</LinearLayout>